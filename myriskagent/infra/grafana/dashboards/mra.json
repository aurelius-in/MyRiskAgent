{
  "title": "MyRiskAgent - API",
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests",
      "targets": [
        {
          "expr": "sum by (path, method) (rate(mra_requests_total[5m]))",
          "legendFormat": "{{path}} {{method}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Total Requests (5m)",
      "targets": [
        { "expr": "sum(rate(mra_requests_total[5m]))" }
      ],
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 8 }
    },
    {
      "type": "table",
      "title": "Requests by Path/Method",
      "targets": [
        { "expr": "sum by (path, method) (rate(mra_requests_total[5m]))" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 }
    },
    {
      "type": "heatmap",
      "title": "Request Latency Heatmap",
      "targets": [
        { "expr": "sum by (le) (rate(mra_request_latency_seconds_bucket[5m]))" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 }
    },
    {
      "type": "stat",
      "title": "P95 Latency (s)",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum by (le) (rate(mra_request_latency_seconds_bucket[5m])))" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 28 }
    },
    {
      "type": "stat",
      "title": "P50 Latency (s)",
      "targets": [
        { "expr": "histogram_quantile(0.50, sum by (le) (rate(mra_request_latency_seconds_bucket[5m])))" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 28 }
    },
    {
      "type": "stat",
      "title": "P99 Latency (s)",
      "targets": [
        { "expr": "histogram_quantile(0.99, sum by (le) (rate(mra_request_latency_seconds_bucket[5m])))" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 28 }
    },
    {
      "type": "table",
      "title": "Per-Path P95 Latency (s)",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum by (le, path) (rate(mra_request_latency_seconds_bucket{path!=\\\"\\\"}[5m])))" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 }
    },
    {
      "type": "table",
      "title": "Requests by Method",
      "targets": [
        { "expr": "sum by (method) (rate(mra_requests_total[5m]))" }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 40 }
    },
    {
      "type": "table",
      "title": "Error Rate by Method (5m)",
      "targets": [
        { "expr": "sum by (method) (rate(mra_requests_total{status=~\\\"5..\\\"}[5m])) / sum by (method) (rate(mra_requests_total[5m]))" }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 40 }
    },
    {
      "type": "table",
      "title": "Per-Path 5xx Error Rate (5m)",
      "targets": [
        { "expr": "sum by (path) (rate(mra_requests_total{status=~\"5..\"}[5m]))" }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 40 }
    },
    {
      "type": "table",
      "title": "Per-Path 4xx Error Rate (5m)",
      "targets": [
        { "expr": "sum by (path) (rate(mra_requests_total{status=~\"4..\"}[5m]))" }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 46 }
    },
    {
      "type": "table",
      "title": "Per-Path Success Rate (5m)",
      "targets": [
        { "expr": "sum by (path) (rate(mra_requests_total{status=~\\\"2..\\\"}[5m])) / sum by (path) (rate(mra_requests_total[5m]))" }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 46 }
    },
    {
      "type": "timeseries",
      "title": "Requests by Path (5m rate)",
      "targets": [
        { "expr": "sum by (path) (rate(mra_requests_total[5m]))", "legendFormat": "{{path}}" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 52 }
    }
  ],
  "schemaVersion": 38,
  "version": 1
}
